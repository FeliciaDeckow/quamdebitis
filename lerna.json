{
  "packages": ["packages/*"],
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "allowBranch": "master",
      "preid": "rc",
      "conventionalCommits": true,
      "message": "chore(release): publish new release [skip ci]",
      "ignoreChanges": [
        "**/__fixtures__/**",
        "**/__snapshots__/**",
        "**/__tests__/**",
        "**/tests/**",
        "**/*.md"
      ]
    }
  }
}
